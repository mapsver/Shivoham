    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/ll_buttonsPanel">
                <ImageButton
                    android:id="@+id/bn_A"
                    android:onClick="onClickButtonTouch"
                    android:text="Touch On"
                    android:background="@drawable/touchpoint"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/bn_B"/>
                <ImageButton
                    android:id="@+id/bn_B"
                    android:onClick="onClickButtonPrev"
                    android:text="Prev"
                    android:background="@drawable/previous"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/bn_C"
                    android:layout_toRightOf="@+id/bn_A"/>
                <ImageButton
                    android:id="@+id/bn_C"
                    android:onClick="onClickButtonPlayPause"
                    android:text="Play"
                    android:background="@drawable/play"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/bn_D"
                    android:layout_toRightOf="@+id/bn_B"/>
                <ImageButton
                    android:id="@+id/bn_D"
                    android:onClick="onClickButtonForward"
                    android:text="Next"
                    android:background="@drawable/forward"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/bn_E"
                    android:layout_toRightOf="@+id/bn_C"/>
                <ImageButton
                    android:id="@+id/bn_E"
                    android:onClick="onClickButtonSave"
                    android:text="Next"
                    android:background="@drawable/save"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/bn_F"
                    android:layout_toRightOf="@+id/bn_D"/>
                <ImageButton
                    android:id="@+id/bn_F"
                    android:onClick="onClickButtonSetTopGuide"
                    android:text="Next"
                    android:background="@drawable/topguide"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/bn_G"
                    android:layout_toRightOf="@+id/bn_E"/>
                <ImageButton
                    android:id="@+id/bn_G"
                    android:onClick="onClickButtonSetBotGuide"
                    android:text="Next"
                    android:background="@drawable/botguide"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/bn_H"
                    android:layout_toRightOf="@+id/bn_F"/>
                <ImageButton
                    android:id="@+id/bn_H"
                    android:onClick="onClickButtonRecord"
                    android:text="Next"
                    android:background="@drawable/record"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/bn_G"/>
            </LinearLayout>-->

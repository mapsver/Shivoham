        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fl_mainFrame">
            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdfView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            />
            <TextView
                android:id="@+id/tv_touchMask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#33FFFF88"
                android:visibility="gone"
                android:layout_gravity="center"/>
            <LinearLayout
                android:id="@+id/ll_highlighter"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="#66FF8800"
                android:visibility="visible"
                android:orientation="vertical"
                />
            <LinearLayout
                android:id="@+id/ll_topGuide"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#66111148"
                android:visibility="visible"
                android:orientation="vertical"
                />
            <LinearLayout
                android:id="@+id/ll_botGuide"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#66222248"
                android:visibility="visible"
                android:orientation="vertical"
                />
        </FrameLayout>
    </LinearLayout>



</FrameLayout>

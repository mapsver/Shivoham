<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:id="@+id/controls_bg">

        <LinearLayout
            android:id="@+id/controls_time_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="00:00"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_weight=".49"
                android:gravity="center"
                android:id="@+id/controls_time_elapsed"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.02"
                android:background="@color/cardview_dark_background"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.49"
                android:text="01:00"
                android:textSize="12dp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/controls_time_total"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controls_center_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.60"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/prev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/prevsolidbutton"
                android:contentDescription="@string/skip_prev"/>

            <ImageView
                android:id="@+id/play_pause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/playsolidbutton"
                android:contentDescription="@string/play_pause"/>

            <ImageView
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/nextsolidbutton"
                android:contentDescription="@string/skip_next"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controls_mode_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20">

            <ImageView
                android:id="@+id/mode_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/listenicon"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="@string/skip_prev"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>